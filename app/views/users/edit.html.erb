<h2>User info</h2>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@user) do |f| %>
  <div class="field">
    <label for="user_name">Name</label>
    <%= f.text_field :name, autofocus: true, class:"name", id:"user_name" %>
  </div>
  <div class="field">
    <label for="user_image">Image</label>
    <%= f.attachment_field :profile_image, class:"user_image", id:"user_profile_image" %>
  </div>
  <div class="field">
    <label for="user_introduction">Introduction</label>
    <%= f.text_area :introduction, class:"introduction", id:"user_introduction" %>
  </div>
  <div class="actions">
    <%= f.submit "Update User" %>
  </div>
<% end %>