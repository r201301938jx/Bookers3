<div class="row">
  <div class="col-xs-3">
    <h2>User info</h2>
    <img class="attachment user profile_image fallback" src="/assets/no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" alt="No image">
    <table class="table">
      <tbody>
        <tr></tr> 
        <tr>
    	    <th>name</th>
    	    <th><%= current_user.name %></th>
        </tr>
        <tr>
    	    <th>introduction</th>
    	    <th><%= current_user.introduction %></th>
        </tr>
      </tbody>
    </table>

    <div class="row">
      <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_21146" href="/users/21146/edit"></a>
    </div>

    <h2>New book</h2>
    <%= form_for(@book, url: books_path) do |f| %>
      <% if @book.errors.any? %>
        <div id="error_explanation">
          <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
          <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="field row">
        <%= f.label :title %><br />
        <%= f.text_field :title, class:"col-xs-12 book_title", id:"book_title" %>
      </div>
      <div class="field row">
        <%= f.label :opinion %><br />
        <%= f.text_area :body, class:"col-xs-12 book_body", id:"book_body" %>
      </div>
      <div class="actions row">
        <%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %>
      </div>
    <% end %>
  </div>

  <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr> 
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td>
            <a href="/users/21147">
              <img class="attachment user profile_image" src="/attachments/c07f8b963ad12fe1b2da47152022cb924c67de30/store/fill/50/50/7221c28d18146b6a85f2c138f0849b821735abb489975d6070b857129410/profile_image" alt="Profile image">
            </a>        
          </td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
      
    </table>
  </div>
</div>